+
+/* LED users */
+#define   EV_NAS_SYSTEM      0    /* Overall system: NAS ready, booting, shutdown... */
+#define   EV_DISK_SMART      1    /* Disk SMART including temp., error lba, ...*/
+#define   EV_DISK_IO         2    /* Disk read/write error */
